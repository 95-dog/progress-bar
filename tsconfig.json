{
    "include": ["./**/*"],
    "compilerOptions": {
        "outDir": "dist/js",
        "module": "ES2020",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "es2016",
            "dom",
            "es2018",
            "es2020",
            "es2022"
        ]
    }
}
